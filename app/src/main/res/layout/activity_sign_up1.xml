<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="signing up step 1 page"
    android:background="@color/blue_grey"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="20dp"
    tools:context="com.example.abanoub.voicebasedemailsystem.SignUp1Activity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/emaillogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/edit_text"
            android:contentDescription="enter your full name here"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/layeru"
                android:tint="@color/colorsmallimage" />

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/oval_shape"
                android:hint="@string/fullName"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/edit_text"
            android:contentDescription="enter your username here"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/layerem"
                android:tint="@color/colorsmallimage" />

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Username"
                android:inputType="text"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:enabled="false"
                    android:hint="\@vmail.com"
                    android:inputType="textEmailAddress"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    android:textColorHint="#000"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/edit_text"
            android:contentDescription="enter your password here"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/layer0"
                android:tint="@color/colorsmallimage" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Password"
                android:inputType="textPassword"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/edit_text"
            android:contentDescription="enter your password here again"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/layer0"
                android:tint="@color/colorsmallimage" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:weightSum="4">

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:contentDescription="sign up button"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/gradian_1"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:padding="12dp"
                android:text="@string/signUp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_link"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/already_user"

        android:layout_marginBottom="24dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:text="@string/already_user"
        android:textColor="#d9e5f3"
        android:textSize="16sp" />
</LinearLayout>


